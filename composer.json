{
  "name": "mountz/civite",
  "type": "library",
  "description": "a library helper for integrating vite with codeigniter 4",
  "license": "mit",
  "autoload": {
    "psr-4": {
      "Mountz\\Civite\\": "src/"
    },
    "files": [
      "src/CiVite_helper.php"
    ]
  },
  "authors": [
    {
      "name": "MountZ1",
      "email": "119827998+MountZ1@users.noreply.github.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "codeigniter4/framework": "^4.0"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "0.1.x-dev"
    },
    "codeigniter4": {
      "commands": [
        "Mountz\\CiVite\\Commands\\ViteInstall"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
